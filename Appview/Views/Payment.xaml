<UserControl x:Class="Appview.Views.Payment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appview.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FB6501">
        <!-- Inner Section -->
        <Border Background="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center" Width="750" Height="400" CornerRadius="10" Padding="20">
            <!-- Content -->
            <StackPanel>
                <!-- Food Image -->
                <Image Source="https://i.ibb.co.com/85cbJm3/Food.png" Stretch="UniformToFill" HorizontalAlignment="Stretch" Height="200" Margin="0, 0, 0, 10"/>

                <!-- Konfirmasi Pembayaran -->
                <TextBlock Text="Konfirmasi Pembayaran" Foreground="#F83D01" FontSize="18" FontWeight="Bold" Margin="0, 10, 0, 5"/>

                <!-- Order Detail Grid -->
                <Border BorderBrush="#F83D01" BorderThickness="2" CornerRadius="10" Padding="10 2 10 10" Height="110">
                    <Grid Margin="0,10,0,0">
                        <!-- Define two columns for left and right sections -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <!-- Left column takes 3 parts -->
                            <ColumnDefinition Width="2*" />
                            <!-- Right column takes 2 parts -->
                        </Grid.ColumnDefinitions>

                        <!-- Left Section -->
                        <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                            <TextBlock Text="Scrambled Egg and Potato" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Text="1. Fluffy Scrambled Eggs" FontWeight="SemiBold"/>
                            <TextBlock Text="2. Golden-Brown Potatoes" FontWeight="SemiBold"/>
                            <TextBlock Text="3. Tomato and Soy Sauce" FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Right Section with Inner Grid -->
                        <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                            <!-- Define two inner columns for labels and values -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Labels on the left side of the right section -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                <TextBlock Text="Jumlah Dipesan:" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,5"/>
                                <TextBlock Text="Total Pembayaran:" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            </StackPanel>

                            <!-- Values on the right side of the right section -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <TextBlock Text="3 Pcs" Margin="10,0,0,5" FontWeight="SemiBold" FontSize="16" Foreground="#F83D01"/>
                                <TextBlock Text="Rp75.000" Margin="10,0,0,40" FontWeight="SemiBold" FontSize="16" Foreground="#FFF" Background="#FE8501" Width="75" HorizontalAlignment="Left" Padding="2"/>
                            </StackPanel>

                            <!-- Payment Button across the entire right section -->
                            <Button Grid.ColumnSpan="2" Content="Bayar Sekarang" Background="#F83D01" Foreground="White" FontWeight="Bold"
                                 Height="30" VerticalAlignment="Bottom" Margin="0,20,0,0" Cursor="Arrow"/>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
